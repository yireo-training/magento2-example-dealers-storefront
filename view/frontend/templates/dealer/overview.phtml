<?php
declare(strict_types=1);

/** @var \Yireo\ExampleDealersStorefront\ViewModel\Dealers $dealersViewModel */
$dealersViewModel = $block->getDealersViewModel();
$dealers = $dealersViewModel->getDealers();
?>
